   Script to create two users in nginx server at aws instance and your web pages must present(in order) at home directories of users,
   
#!/bin/bash
   dnf install nginx -y
   dnf install vsftpd -y
   adduser user1
   echo "user1:Redhat@12345" | chpasswd
   adduser user2
   echo "user2:Redhat@12345" | chpasswd
   echo "PasswordAuthentication yes" > /etc/ssh/sshd_config.d/50-cloud-init.conf
   echo "<h1>This is for web1</h1>" > /home/user1/index.html
   echo "<h1>This is for web2</h1>" > /home/user2/index.html
   chown user1:user1 /home/user1 -R
   chmod 755 /home/user1 -R
   chown user2:user2 /home/user2 -R
   chmod 755 /home/user2 -R
   
   echo "server {
           listen       80;
           listen       [::]:80;
           server_name  test1.com;
           root         /home/user1/;
            access_log  /home/user1/access.log  main;
      	    error_log /home/user1/error.log;
       }" > /etc/nginx/conf.d/user1.conf
   echo "server {
           listen       80;
           listen       [::]:80;
           server_name  test2.com;
           root         /home/user2/;
            access_log  /home/user2/access.log  main;
            error_log /home/user2/error.log;
       }" > /etc/nginx/conf.d/user2.conf
   setenforce 0
   systemctl enable --now nginx
   systemctl enable --now vsftpd
   
   echo "setenforce 0
         systemctl restart nginx
        " >> /etc/rc.d/rc.local
   chmod +x /etc/rc.d/rc.local






   
         
      
      
     
